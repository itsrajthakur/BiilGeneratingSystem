@{
    ViewData["Title"] = "Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Manage your product inventory</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Go to Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Bills</h5>
                <p class="card-text">View and manage bills</p>
                <a asp-controller="Bill" asp-action="Index" class="btn btn-primary">Go to Bills</a>
            </div>
        </div>
    </div>
</div>
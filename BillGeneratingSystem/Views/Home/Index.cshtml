@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="display-4 fw-bold mb-3">Simplify Your <span class="text-primary">Billing</span> Process</h1>
                <p class="lead text-muted mb-4">Streamline your business operations with our comprehensive billing management system. Create, manage, and track invoices with ease.</p>
                <div class="d-flex flex-wrap gap-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Bill" asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Create New Bill
                        </a>
                        <a asp-controller="Bill" asp-action="Index" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-receipt me-2"></i>View Bills
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Admin" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
                        </a>
                        <a href="#features" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-info-circle me-2"></i>Learn More
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <img src="https://www.shutterstock.com/image-vector/thin-line-easy-contactless-payment-600nw-1707796087.jpg" alt="Billing System" class="img-fluid rounded-3 shadow-lg" style="max-height: 400px;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Powerful Features</h2>
            <p class="text-muted">Everything you need to manage your billing efficiently</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-4 mx-auto" style="width: 70px; height: 70px;">
                            <i class="bi bi-receipt-cutoff fs-2"></i>
                        </div>
                        <h4 class="card-title mb-3">Easy Billing</h4>
                        <p class="card-text text-muted">Create professional invoices in seconds with our intuitive interface. Add products, services, and taxes with just a few clicks.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle p-3 mb-4 mx-auto" style="width: 70px; height: 70px;">
                            <i class="bi bi-box-seam fs-2"></i>
                        </div>
                        <h4 class="card-title mb-3">Product Management</h4>
                        <p class="card-text text-muted">Manage your product inventory efficiently. Track stock levels, set prices, and categorize items for easy access.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-opacity-10 text-info rounded-circle p-3 mb-4 mx-auto" style="width: 70px; height: 70px;">
                            <i class="bi bi-graph-up fs-2"></i>
                        </div>
                        <h4 class="card-title mb-3">Insightful Reports</h4>
                        <p class="card-text text-muted">Gain valuable insights with detailed reports. Track sales, monitor payment status, and analyze business performance.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">How It Works</h2>
            <p class="text-muted">Simple steps to streamline your billing process</p>
        </div>
        
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="timeline">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="step-number bg-primary text-white rounded-circle me-3">1</div>
                                        <h4 class="mb-0">Add Products</h4>
                                    </div>
                                    <p class="text-muted mb-0">Start by adding your products or services to the system with prices and descriptions.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="step-number bg-primary text-white rounded-circle me-3">2</div>
                                        <h4 class="mb-0">Create Bills</h4>
                                    </div>
                                    <p class="text-muted mb-0">Generate professional bills by selecting products and adding customer details.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="step-number bg-primary text-white rounded-circle me-3">3</div>
                                        <h4 class="mb-0">Process Payments</h4>
                                    </div>
                                    <p class="text-muted mb-0">Record payment details and mark bills as paid, pending, or failed for easy tracking.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="step-number bg-primary text-white rounded-circle me-3">4</div>
                                        <h4 class="mb-0">Track & Analyze</h4>
                                    </div>
                                    <p class="text-muted mb-0">Monitor your business performance with detailed reports and analytics.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <h2 class="fw-bold mb-3">Ready to streamline your billing process?</h2>
                <p class="lead mb-0">Join thousands of businesses that trust our system for their billing needs.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Bill" asp-action="Create" class="btn btn-light btn-lg text-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create New Bill
                    </a>
                }
                else
                {
                    <a asp-controller="Admin" asp-action="Login" class="btn btn-light btn-lg text-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Get Started Now
                    </a>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .hero-section {
            background-color: #ffffff;
            padding: 80px 0;
        }
        
        .feature-icon {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .step-number {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }
        
        /* Animation for cards */
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>
}

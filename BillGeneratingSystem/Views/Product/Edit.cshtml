@model Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-pencil-square me-2"></i>Edit Product</h2>
            <p class="text-muted">Update product information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Product Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                    <input asp-for="Name" class="form-control" required />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">Category</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-bookmark"></i></span>
                                    <input asp-for="Category" class="form-control" required />
                                </div>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Price (₹)</label>
                                <div class="input-group">
                                    <span class="input-group-text">₹</span>
                                    <input asp-for="Price" class="form-control" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label">Stock Quantity</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-boxes"></i></span>
                                    <input asp-for="Stock" class="form-control" required />
                                </div>
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="col-12 mt-4">
                                <hr>
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle me-1"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Product Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="bg-light rounded-circle p-2 me-3">
                                <i class="bi bi-box text-primary"></i>
                            </div>
                            <h6 class="mb-0">@Model.Name</h6>
                        </div>
                        <span class="badge bg-light text-dark">@Model.Category</span>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-6">
                            <small class="text-muted d-block">Current Price</small>
                            <span class="fw-bold text-primary">₹@Model.Price.ToString("N2")</span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Current Stock</small>
                            <span class="badge @(Model.Stock > 10 ? "bg-success" : (Model.Stock > 0 ? "bg-warning" : "bg-danger")) rounded-pill">
                                @Model.Stock @(Model.Stock == 1 ? "unit" : "units")
                            </span>
                        </div>
                    </div>
                    
                    <div class="alert alert-info d-flex" role="alert">
                        <div class="me-2">
                            <i class="bi bi-lightbulb"></i>
                        </div>
                        <div>
                            <small>Changes will be reflected in all bills that use this product.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
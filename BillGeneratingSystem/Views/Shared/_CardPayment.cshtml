@{
    var razorpayKey = "rzp_test_J3Oq31tdqQtFBT";
}

<div id="card-payment-container" class="payment-method-container d-none">
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-credit-card me-2 fs-4"></i>
            <h5 class="mb-0">Card Payment</h5>
        </div>
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="https://cdn.razorpay.com/static/assets/logo/payment.svg" alt="Secure Payment" class="img-fluid mb-3" style="max-height: 80px;">
                <h6 class="mb-3">Secure online payment via Razorpay</h6>
            </div>
            
            <div class="alert alert-primary mb-4 shadow-sm">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="bi bi-info-circle-fill"></i>
                    </div>
                    <div>
                        <p class="mb-0">You'll be redirected to Razorpay's secure payment gateway to complete your transaction of <span class="fw-bold">₹<span id="cardAmountDisplay">0.00</span></span>.</p>
                    </div>
                </div>
            </div>
            
            <div class="payment-details p-3 bg-light rounded mb-4">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Amount:</span>
                    <span class="fw-bold text-primary">₹<span id="cardAmountTotal">0.00</span></span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Payment Method:</span>
                    <span class="badge bg-primary">Card/Net Banking/Wallet</span>
                </div>
            </div>
            
            <div class="d-grid gap-2">
                <button type="button" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm" id="razorpayBtn">
                    <i class="bi bi-credit-card me-2"></i>Proceed to Payment
                </button>
            </div>
        </div>
        <div class="card-footer bg-light border-top-0 text-center">
            <small class="text-muted">
                <i class="bi bi-shield-lock me-1"></i>Your payment information is secure
            </small>
        </div>
    </div>
</div>

<script>
    // This will be moved to a separate JS file later
    var razorpayKey = "@razorpayKey";
</script>